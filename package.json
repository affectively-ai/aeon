{
  "name": "@affectively/aeon",
  "version": "1.0.0",
  "description": "Distributed synchronization, schema versioning, and conflict resolution for real-time collaborative applications",
  "keywords": [
    "distributed",
    "synchronization",
    "sync",
    "replication",
    "versioning",
    "migration",
    "schema",
    "crdt",
    "collaboration",
    "real-time",
    "conflict-resolution",
    "offline-first"
  ],
  "author": "Affectively AI",
  "license": "MIT",
  "homepage": "https://github.com/affectively-ai/aeon#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affectively-ai/aeon.git"
  },
  "bugs": {
    "url": "https://github.com/affectively-ai/aeon/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/index.js"
      },
      "require": {
        "types": "./dist/core/index.d.cts",
        "default": "./dist/core/index.cjs"
      }
    },
    "./versioning": {
      "import": {
        "types": "./dist/versioning/index.d.ts",
        "default": "./dist/versioning/index.js"
      },
      "require": {
        "types": "./dist/versioning/index.d.cts",
        "default": "./dist/versioning/index.cjs"
      }
    },
    "./distributed": {
      "import": {
        "types": "./dist/distributed/index.d.ts",
        "default": "./dist/distributed/index.js"
      },
      "require": {
        "types": "./dist/distributed/index.d.cts",
        "default": "./dist/distributed/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "eventemitter3": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
